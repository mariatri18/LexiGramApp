<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFFFE2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="337dp"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="254dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/lexigram" />

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#F9D162"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Νέο Παιχνίδι"
        android:textAllCaps="false"
        android:textColor="#6BC6A5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/buttonLevels"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="102dp"
        android:backgroundTint="#F58521"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Επίπεδα"
        android:textAllCaps="false"
        android:textColor="#6BC6A5"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNewGame" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="207dp"
        android:layout_height="77dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="102dp"
        android:textColor="#6BC6A5"
        android:textSize="28sp"
        android:backgroundTint="#0F86D4"
        android:fontFamily="@font/roboto_mono_bold"
        android:textAllCaps="false"
        android:text="Ρυθμίσεις"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLevels" />

</androidx.constraintlayout.widget.ConstraintLayout>