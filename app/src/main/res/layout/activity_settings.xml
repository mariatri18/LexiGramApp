<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFFFE2"
    tools:context=".SettingsActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="85dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Μουσική"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/switch1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="600dp"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Ήχος"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/switch2"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="326dp"
        android:layout_height="392dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Είμαστε μια ομάδα μεταπτυχιακών φοιτητών Πληροφορικής και συνεργαζόμαστε για να σχεδιάσουμε, να δημιουργήσουμε και να παράγουμε έργα για τα οποία είμαστε περήφανοι.
Στόχος αυτού του έργου είναι να προσφέρει μια μοναδική εμπειρία στα μικρά παιδιά προκειμένου να εμπλουτίσουν το λεξιλόγιό τους με παιγνιώδη και διασκεδαστικό τρόπο.
Όλα είναι θέμα ευκολίας. Έχουμε σκεφτεί τα πάντα, από το πως θα μάθουν τα παιδιά να προφέρουν σωστά τη λέξη μέχρι και το επίπεδο δυσκολίας που θα είναι ανάλογο του κάθε παιδιού. Οπότε, το μόνο που έχετε να κάνετε εσείς είναι να κατεβάσετε την εφαρμογή και να παίξετε!!! Βούτα Κατερίνα Κιοσσε Μαρία  Τριανταφυλλίδου Μαρία "
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>