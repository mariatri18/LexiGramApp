<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelsActivity">

    <Button
        android:id="@+id/animals"
        android:layout_width="381dp"
        android:layout_height="163dp"
        android:backgroundTint="#F9D162"
        android:text="Ζωα"
        app:layout_constraintBottom_toTopOf="@+id/fruits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fruits"
        android:layout_width="401dp"
        android:layout_height="184dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#0F86D4"
        android:text="Φρούτα"
        app:layout_constraintBottom_toTopOf="@+id/comingSoon1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animals" />

    <Button
        android:id="@+id/comingSoon1"
        android:layout_width="397dp"
        android:layout_height="169dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#F9D162"
        android:text="Οχηματα"
        app:layout_constraintBottom_toTopOf="@+id/comingSoon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fruits" />

    <Button
        android:id="@+id/comingSoon2"
        android:layout_width="398dp"
        android:layout_height="183dp"
        android:backgroundTint="#0F86D4"
        android:text="Επαγγελματα"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comingSoon1" />
</androidx.constraintlayout.widget.ConstraintLayout>